<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/btn5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <ImageView
            android:id="@+id/buttonImage5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:layout_above="@id/btn5"
        android:layout_marginBottom="8dp"
        android:background="@color/black"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="8dp"
        android:background="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn5"
        android:layout_marginTop="8dp"
        />

    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:background="@color/black"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btn5"
        android:layout_marginRight="-14dp"
        />
    <RelativeLayout
        android:layout_width="8dp"
        android:layout_height="350dp"
        android:background="@color/black"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btn5"
        android:layout_marginLeft="-14dp"
        />

    <RelativeLayout
        android:id="@+id/btn8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_below="@id/btn5"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/buttonImage8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"

        android:layout_toLeftOf="@id/btn5"
        >
        <ImageView
            android:id="@+id/buttonImage4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"

        android:layout_toRightOf="@id/btn5"
        >
        <ImageView
            android:id="@+id/buttonImage6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"

        android:layout_toLeftOf="@id/btn8"
        android:layout_below="@id/btn5"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/buttonImage7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/btn8"
        android:layout_below="@id/btn5"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/buttonImage9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_above="@id/btn5"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:id="@+id/buttonImage2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/btn1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/btn5"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/btn2"
        >
        <ImageView
            android:id="@+id/buttonImage1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"

        android:layout_above="@id/btn5"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/btn2"
        >
        <ImageView
            android:id="@+id/buttonImage3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
        </ImageView>
    </RelativeLayout>

    <Button
        android:id="@+id/am1_btn_reset"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@id/btn8"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:text="Reset"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/custom_button"
        />

    <LinearLayout
        android:id="@+id/linera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/am1_txt_scoreX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score X : 0"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/am1_txt_scoreY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Score O : 0"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            />

    </LinearLayout>




</RelativeLayout>